<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <!-- 提供方应用信息， 用于计算依赖关系-->
    <dubbo:application name="dubbo-consumer"/>

    <!-- 注册中心暴露服务地址 -->
    <!--<dubbo:registry address="zookeeper://127.0.0.1:2181"/>-->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>
        <!--用Dubbo协议-->
    <dubbo:protocol name="dubbo" port="20880"/>
    <!-- 生成远程服务代理， 可以和本地bean一样使用服务-->

    <!--使用stub-->
    <!--<dubbo:reference id="dubboFacade" stub="com.example.royal.stubs.DubboFacadeStub" interface="com.example.core.facade.DubboFacade" check="false" version="0.0.1" group="fake,core"/>-->
    <dubbo:reference id="dubboFacade" interface="com.example.core.facade.DubboFacade" check="false" version="0.0.1" group="fake,core" merger="true"/>

    <dubbo:annotation package="com.example.royal.controller" />
</beans>